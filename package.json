{
  "name": "commitstats-api",
  "version": "1.0.0",
  "description": "A REST API that generates commit count stats from Bitbucket and GitLab in SVG badge format.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write ."
  },
  "keywords": [
    "commitstats",
    "bitbucket",
    "gitlab",
    "commits",
    "typescript",
    "api",
    "badge",
    "rest"
  ],
  "author": "Matheus Julidori",
  "license": "MIT",
  "homepage": "https://github.com/MatheusJulidori/commitstats-api#readme",
  "bugs": {
    "url": "https://github.com/MatheusJulidori/commitstats-api/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MatheusJulidori/commitstats-api.git"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "xmlbuilder2": "^3.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.1",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "globals": "^16.2.0",
    "prettier": "^3.5.3",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.20.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.0"
  }
}
